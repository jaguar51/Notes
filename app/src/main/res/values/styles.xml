<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainAppColor</item>
        <item name="colorAccent">@color/mainAppColor</item>
        <item name="colorPrimaryDark">@color/mainAppColorDark</item>
        <item name="android:colorActivatedHighlight">@color/actionModeColor</item>
        <!-- Set Action Mode Style-->
        <item name="actionModeStyle">@style/LStyled.ActionMode</item>
    </style>

    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/mainAppColor</item>
    </style>
</resources>
